
@model LiteCommerce.Admin.Models.EmployeePaginationQueryResult
@{
    Layout = null;
}


<div class="text-left">
    <p>Có tất cả <strong>@Model.RowCount</strong> Nhân viên. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>
                <p>Photo</p>
            </th>
            <th>
                <p>Họ</p>
            </th>
            <th>
                <p>Tên</p>
            </th>
            <th>
                <p>Ngày sinh</p>
            </th>
            <th>
                <p>Ghi chú</p>
            </th>
            <th>
                <p>Email</p>
            </th>
            <th>
                <p>Password</p>
            </th>
            <th class="text-right">
                <a href="~/Employee/Add" class="btn btn-xs btn-primary">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    <img src="@item.Photo" />
                </td>
                <td>
                    @item.LastName
                </td>
                <td>
                    @item.FirstName
                </td>
                <td>
                    @item.BirthDate
                </td>
                <td>
                    @item.Notes
                </td>
                <td>
                    @item.Email
                </td>
                <td>
                    @item.Password
                </td>
                <td class="text-right">
                    <a href="~/Employee/Edit/@item.EmployeeID" class="btn btn-xs btn-info">
                        <i class="fa fa-edit"></i>
                    </a>

                    <a href="~/Employee/Delete/@item.EmployeeID" class="btn btn-xs btn-danger">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>



<div class="text-center">
    <ul class="pagination">
        @for (int page = 1; page <= Model.PageCount; page++)
        {
            if (page == Model.Page)
            {
                <li class="active"><a href="javascript:;">@page</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="getEmployees(@page)">@page</a></li>
            }
        }
    </ul>
</div>



