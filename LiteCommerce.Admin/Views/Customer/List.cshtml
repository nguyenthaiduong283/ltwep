
@model LiteCommerce.Admin.Models.CustomerPaginationQueryResult
@{
    Layout = null;
}


<div class="text-left">
    <p>Có tất cả <strong>@Model.RowCount</strong> khách hàng. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Tên khách hàng</th>
            <th>Tên liên lạc</th>
            <th>Địa chỉ</th>
            <th>Thành phố</th>
            <th>Mã vùng</th>
            <th>Quốc gia</th>
            <th>Email</th>
            <th>Password</th>
            <th class="text-right">
                <a href="~/Customer/Add" class="btn btn-xs btn-primary">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>@item.CustomerName</td>
                <td>@item.ContactName</td>
                <td>@item.Address</td>
                <td>@item.City</td>
                <td>@item.PostalCode</td>
                <td>@item.Country</td>
                <td>@item.Email</td>
                <td>@item.Password</td>
                <td class="text-right">
                    <a href="~/Customer/Edit/@item.CustomerID" class="btn btn-xs btn-info">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="~/Customer/Delete/@item.CustomerID" class="btn btn-xs btn-danger">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>



<div class="text-center">
    <ul class="pagination">
        @for (int page = 1; page <= Model.PageCount; page++)
        {
            if (page == Model.Page)
            {
                <li class="active"><a href="javascript:;">@page</a></li>
            }
            else
            {
                <li><a href="javascript:;" onclick="getCustomers(@page)">@page</a></li>
            }
        }
    </ul>
</div>




