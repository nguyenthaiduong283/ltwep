@model LiteCommerce.DomainModels.ProductGallery

<form method="post" action="~/Product/SaveGallery">
    <div class="text-danger form-group">
        @Html.ValidationSummary()
    </div>
    @Html.HiddenFor(m => m.GalleryID)
    @Html.HiddenFor(m => m.ProductID)
    
    <div class="form-group">
        <label>Ảnh:</label>
        @Html.TextBoxFor(m => m.Photo, new { @class = "form-control", @autofocus = "autofocus" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.Photo)</div>
    </div>
    <div class="form-group">
        <label>Mô tả:</label>
        @Html.TextBoxFor(m => m.Description, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.Description)</div>
    </div>

    <div class="form-group">
        <label>Thứ tự hiển thị:</label>
        @Html.TextBoxFor(m => m.DisplayOrder, new { @class = "form-control" })
        <div class="text-danger">@Html.ValidationMessageFor(m => m.DisplayOrder)</div>

    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-3"><label>Hiển thị:</label></div>
            <div class="col-md-3"> <label>Yes</label> @Html.RadioButtonFor(m => m.IsHidden, "True")</div>
            <div class="col-md-3"> <label>No</label>@Html.RadioButtonFor(m => m.IsHidden, "False")</div>
        </div>

        @Html.ValidationMessageFor(m => m.IsHidden)
    </div>

    <div class="row">
        <div class="col-md-6">
            <button type="submit" class="btn btn-primary">
                <i class="fa fa-save"></i> Lưu dữ liệu
            </button>
        </div>
        <div class="col-md-6 text-right">
            <a href="~/Product" class="btn btn-warning">
                <i class="fa fa-window-close"></i> Bỏ qua
            </a>
        </div>
    </div>
</form>


