@model LiteCommerce.DomainModels.ProductEx
@{
    ViewBag.Title = "Chi tiết thông tin hàng hóa";
}

<div class="" style="margin-left: 300px;">
    <label class="control-label col-sm-2">Tên hàng hóa:</label>
    <div class="col-sm-10">
        <p class="form-control-static">@Model.ProductName</p>
    </div>
    <label class="control-label col-sm-2">Mã nhà cung cấp:</label>
    <div class="col-sm-10">
        <p class="form-control-static">@Model.SupplierID</p>
    </div>
    <label class="control-label col-sm-2">Mã loại hàng:</label>
    <div class="col-sm-10">
        <p class="form-control-static">@Model.CategoryID</p>
    </div>
    <label class="control-label col-sm-2">Đơn vị tính:</label>
    <div class="col-sm-10">
        <p class="form-control-static">@Model.Unit</p>
    </div>

    <label class="control-label col-sm-2">Giá:</label>
    <div class="col-sm-10">
        <p class="form-control-static">@Model.Price</p>
    </div>

    <label class="control-label col-sm-2">Ảnh:</label>
    <div class="col-sm-4">
        <p class="form-control-static"><img style="height:100px; width:100px;" src="@Model.Photo " /></p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <fieldset>
            <legend>Thuộc tính</legend>
            <table class="table table-bordered table-hover table-striped">
                <thead>
                    <tr>
                        <th>Mã thuộc tính</th>
                        <th>Tên thuộc tính</th>
                        <th>Giá trị thuộc tính</th>
                        <th>Thứ tự hiển thị</th>
                        
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Attributes)
                    {
                        <tr>
                            <td> <span>@item.AttributeID</span></td>
                            
                            <td> <span>@item.AttributeName</span></td>
                            <td> <span>@item.AttributeValue</span></td>
                            <td> <span>@item.DisplayOrder</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </fieldset>
    </div>

</div>




<div class="row">
    <div class="col-md-12">
        <fieldset>
            <legend>Thư viện ảnh</legend>
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr>
                            <th>Mã ảnh</th>
                            <th>Ảnh</th>
                            <th>Mô tả</th>
                            <th>Thứ tự hiển thị</th>
                            <th>Trạng thái</th>
                            <th class="text-right">
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Galleries)
                        {
                        <tr>
                            <td> <span>@item.GalleryID</span></td>
                            <td> <img style="height:100px; width:100px;" src="@item.Photo " /></td>
                            @*<td> <span>@item.Photo</span></td>*@
                            <td> <span>@item.Description</span></td>
                            <td> <span>@item.DisplayOrder</span></td>
                            <td> <span>@item.IsHidden</span></td>
                        </tr>
                        }
                    </tbody>
                </table>
        </fieldset>
    </div>

</div>




