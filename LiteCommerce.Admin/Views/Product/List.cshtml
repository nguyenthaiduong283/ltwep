
@model LiteCommerce.Admin.Models.ProductPaginationQueryResult
@{
    Layout = null;
}


<div class="text-left">
    <p>Có tất cả <strong>@Model.RowCount</strong> mặt hàng. Bạn đang ở trang <strong>@Model.Page</strong> trên tổng số <strong>@Model.PageCount</strong> trang.</p>
</div>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Tên hàng</th>
            <th>Đơn vị tính</th>
            <th>Giá hàng</th>
            <th>Ảnh minh họa</th>
            <th class="text-right">
                <a href="~/Product/Add" class="btn btn-xs btn-primary">
                    <i class="fa fa-plus"></i>
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Data)
        {
            <tr>
                <td>
                    <a href="~/Product/Details/@item.ProductID">@item.ProductName</a>
                </td>
                <td>@item.Unit </td>
                <td>@item.Price</td>
                <td>
                    <img src="@item.Photo" />
                </td>
                <td class="text-right">
                    
                    <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger">
                        <i class="fa fa-remove"></i>
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>

   

    <div class="text-center">
        <ul class="pagination">
            @for (int page = 1; page <= Model.PageCount; page++)
            {
                if (page == Model.Page)
                {
                    <li class="active"><a href="javascript:;">@page</a></li>
                }
                else
                {
                    <li><a href="javascript:;" onclick="getProducts(@page)">@page</a></li>
                }
            }
        </ul>
    </div>
